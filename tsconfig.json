{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"lib": ["es2015", "es2017", "dom"],
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"baseUrl": "./",
		"paths": {
			"components/*": ["src/components/*"]
		}
	},
	"include": ["./src/**/*"],
	"awesomeTypescriptLoaderOptions": {
		"reportFiles": ["./src/**/*"]
	}
}
